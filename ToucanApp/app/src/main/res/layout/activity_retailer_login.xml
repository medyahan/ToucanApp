<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="420dp"
    android:layout_height="800dp"
    tools:context=".Common.LoginSignUp.Login"
    android:background="@drawable/kayitekrani"
    android:layout_marginTop="80dp"
    android:layout_gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/login_back_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:padding="15dp"
        android:onClick="BackToStartUp"
        android:src="@drawable/backicon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:paddingBottom="320dp"
        android:paddingLeft="47dp"
        android:paddingRight="47dp"
        android:paddingTop="18dp">


        <EditText
            android:id="@+id/ad_kayit"
            android:hint="Ad"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
        <EditText
            android:id="@+id/email_kayit"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"/>
        <EditText
            android:id="@+id/sifre_kayit"
            android:hint="Şifre"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="7dp"/>
        <EditText
            android:id="@+id/sifre2_kayit"
            android:hint="Şifre"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="7dp"/>

        <Button
            android:id="@+id/kayitolbutonu_kayit"
            android:background="@drawable/kayitbutonu1"
            app:backgroundTint="@null"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </LinearLayout>


