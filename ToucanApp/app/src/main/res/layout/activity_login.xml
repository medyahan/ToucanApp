<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="420dp"
    android:layout_height="800dp"
    tools:context=".Start.Login"
    android:background="@drawable/girisekrani"
    android:layout_marginTop="80dp"
    android:layout_gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/login_back_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:onClick="BackToStartUp"
        android:padding="15dp"
        android:src="@drawable/backicon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:paddingBottom="320dp"
        android:paddingLeft="47dp"
        android:paddingRight="47dp"
        android:paddingTop="48dp">


        <EditText
            android:id="@+id/email_giris"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
        <EditText
            android:id="@+id/sifre_giris"
            android:hint="Åžifre"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="22dp"/>


        <Button
            android:id="@+id/girisbutonu_giris"
            android:background="@drawable/girisbuton1"
            app:backgroundTint="@null"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="43dp"/>

    </LinearLayout>

</LinearLayout>